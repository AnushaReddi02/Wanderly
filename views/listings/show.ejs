<%layout("layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Listing Details : </h3>
    </div>
        <div class="card col-6 offset-2 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b> <br />
                    <%= listing.description %> <br />
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
                    <!-- 
                        1. toLocaleString() is a JavaScript method used to convert values (like Date, Number, Array) into a human-readable string based on local language & region format.
                        2. In our case,it converts price in number format into a string seperated by coma based on indian representation (eg : 10,25,357)
                    -->
                    <%= listing.country %> <br />
                </p>
            </div>
        </div>

        <div class="btns">
            <a 
                href="/listings/<%= listing._id %>/edit" 
                class="btn btn-dark col-1 offset-2">
                EDIT
            </a> 

            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger offset-5">DELETE</button>
            </form>
        </div>
    </div>